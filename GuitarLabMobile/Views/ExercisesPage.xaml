<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuitarLabMobile.Views.ExercisesPage"
             Title="Exercises">
    <CollectionView x:Name="ExercisesCollectionView" SelectionMode="Single" SelectionChanged="OnExerciseSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10">
                    <Label Text="{Binding Exercise}" FontSize="18" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>