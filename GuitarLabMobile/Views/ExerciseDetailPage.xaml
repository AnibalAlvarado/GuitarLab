<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuitarLabMobile.Views.ExerciseDetailPage"
             Title="Exercise Detail">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">
            <Label x:Name="NameLabel" FontSize="24" />
            <Label x:Name="DescriptionLabel" />
            <Label Text="Difficulty:" />
            <Label x:Name="DifficultyLabel" />
            <Label Text="BPM:" />
            <Label x:Name="BPMLabel" />
            <Label Text="Tuning:" />
            <Label x:Name="TuningLabel" />
            <Label Text="Tablature:" />
            <Label x:Name="TablatureLabel" FontFamily="Monospace" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>